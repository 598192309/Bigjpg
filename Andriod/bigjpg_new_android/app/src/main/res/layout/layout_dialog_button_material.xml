<?xml version="1.0" encoding="utf-8"?>
<com.bigjpg.ui.widget.BorderLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    app:isBottomLineVisible="false"
    app:isTopLineVisible="true">

    <Button
        style="@style/CommonButton"
        android:id="@+id/dlg_md_cancel_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/btn_dialog_left"
        android:text="@string/cancel"
        android:textColor="@color/text_gray"
        android:textSize="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/line0_color" />

    <Button
        style="@style/CommonButton"
        android:id="@+id/dlg_md_confirm_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/btn_dialog_right"
        android:text="@string/ok"
        android:textColor="@color/text_black"
        android:textSize="16dp" />

</com.bigjpg.ui.widget.BorderLinearLayout>